//settings
circulo = #f2f2f2
texto = #6f7070 
seta = #abacac
linha = #c3c3c3
linha-con = #e2e2e2
verde = #9cc9a6
azul = #87c2fb
rosinha = #e3c9ba
//tools
//generic
*
    margin: 0
    padding: 0
    border: 0
    list-style: none
    vertical-align: baseline
//base
body 
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, 
      Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";

//objects

.app
    width: 400px
    margin: 0 auto
.cabecalho
    height: 5rem
    border-bottom: 1px solid linha
    display: flex
    align-items: center
    justify-content: center
.cabecalho__text
    width: 75%
    color: texto
    text-align: center
    text-transform: uppercase
    font-size: 1.8rem
    font-weight: 400


.contato
    height: 4rem
    border-top: 1px solid linha-con
    margin: 0 10px 
    display flex
    align-items: center
    cursor: pointer
.contato__circulo
    background-color: circulo
    width: 10%
    height: 30px
    border-radius: 100%
.contato__texto
    color: texto
    font-size: 1.2rem
    padding-left: 10px
    width: 65%
    font-weight: 700
    text-transform: uppercase
.contato__seta
    color: seta
    font-size: 31px 
    width: 25%
    text-align: right 
    font-weight: 700


.contato__seta_perfil
    text-align: left 
    cursor pointer
.cabecalho__text_perfil
    text-align: inherit
.perfil__foto
    width: 140px
    height: 140px
    margin: 30px auto 20px auto
    background-color: circulo
    border-radius: 100%

.perfil__telefone
    display: flex
    margin-top: 20px 

.perfil__numeros
    width: 65%
    display: flex
    flex-direction: column

.perfil__numero
    margin-bottom: 10px 
    padding-left: 10px
    display: flex
    flex-direction: column
    color: texto
    cursor pointer
.perfil__lado
    display: flex
    > img
        margin-left: 50px 
        width: 40px
        height: 40px
.perfil__fundo
    background-color: circulo
    height: 300px
.n1
    border-left:  8px solid azul
.n2
    border-left:  8px solid rosinha
.n3
    border-left:  8px solid circulo

.desligar__dark
    background-color: black
    height: 5rem
.desligar__x
    float: right 
    color: #ffffff
    padding: 1rem 1rem
    font-size: 3.5rem
    cursor: pointer
.desligar__fundo
    height: 450px
    background-color: circulo


//components
.perfil__nome
    display: flex
    align-items: center
    flex-direction: column
    margin-bottom: 30px 
    > span 
        color: texto 
        font-size: 2rem
        font-weight: 700
        text-transform: uppercase
    > span:last-child
        font-size: 1rem  

.perfil__ligar
    padding-top: 20px
    display: flex
    align-items: center
    flex-direction: column
    margin-bottom: 30px 
    > span 
        color: texto 
        font-size: 2rem
        font-weight: 700
        text-transform: uppercase
    > span:nth-child(2n)
        margin-top: 10px 
        font-size: 1rem
    > span:last-child
        font-size: 2.5rem 
    >img 
        margin-top: 18px
        width: 100px
        height 100px 
        cursor pointer   

.perfil__titulo
    width: 40%
    padding-right: 10px
    > span 
        color: texto
        font-size: 1.1rem 
.perfil__informacoes
    width: 60%
    padding-left: 10px
    border-left: 8px solid verde
    display: flex
    flex-direction: column
    > span     
      color: texto


//trumps